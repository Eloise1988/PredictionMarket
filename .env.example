# Core infra
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB=prediction_agent
LOOP_INTERVAL_SECONDS=120
LOG_LEVEL=INFO

# Prediction market sources
POLYMARKET_ENABLED=true
POLYMARKET_GAMMA_BASE_URL=https://gamma-api.polymarket.com
POLYMARKET_CLOB_BASE_URL=https://clob.polymarket.com
POLYMARKET_LIMIT=1000

KALSHI_ENABLED=true
KALSHI_BASE_URL=https://api.elections.kalshi.com/trade-api/v2
KALSHI_LIMIT=200
KALSHI_MIN_SCAN_MARKETS=1000

# Equity/fundamentals source
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co/query

# Alerting
TELEGRAM_BOT_TOKEN=123456:ABCDEF
TELEGRAM_CHAT_ID=123456789
ALERT_TOP_N=5
ALERT_MIN_SCORE=0.62
ALERT_COOLDOWN_MINUTES=120

# OpenAI (optional but recommended for rationale text)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-5-mini
OPENAI_TIMEOUT_SECONDS=20

# Optional controls
MAX_SIGNALS_PER_CYCLE=300
# Legacy option (unused in dynamic mapper mode)
STRICT_THEME_FILTER=true
MIN_SIGNAL_LIQUIDITY=100000
MIN_SIGNAL_VOLUME_24H=0
MIN_PROBABILITY_EDGE=0.40
PROBABILITY_LOW_THRESHOLD=0.30
PROBABILITY_HIGH_THRESHOLD=0.70
POLYMARKET_ONLY_MODE=true
FINANCE_ONLY_MODE=true
TOP_LIQUIDITY_FINANCE_MARKETS=5
FINANCE_PASSED_POOL_SIZE=60
DIVERSIFY_MARKETS=true
DIVERSIFY_MAX_PER_EVENT=1
DIVERSIFY_TEXT_SIMILARITY=0.72
LLM_SELECT_DIVERSE_MARKETS=true
LLM_MARKET_SELECTION_POOL=120
POLYMARKET_MIN_SCAN_MARKETS=1000
CROSS_VENUE_MIN_SIMILARITY=0.20
ENABLE_PROBABILITY_GATE=true
MAX_MARKETS_FOR_LLM=5
LLM_MAP_MAX_TICKERS=8
LLM_MIN_LINKAGE_SCORE=0.35

# Streaming mode (websocket)
STREAMING_ENABLED=false
STREAMING_BATCH_SECONDS=20
STREAMING_MAX_BUFFER=1000
POLYMARKET_WS_ENABLED=true
POLYMARKET_WS_URL=wss://ws-subscriptions-clob.polymarket.com/ws/market
POLYMARKET_WS_MARKET_LIMIT=100
KALSHI_WS_ENABLED=true
KALSHI_WS_URL=wss://api.elections.kalshi.com/trade-api/ws/v2
KALSHI_WS_MARKET_LIMIT=100
KALSHI_WS_CHANNEL=ticker

# Backtesting + calibration
BACKTEST_HORIZON_DAYS=5
BACKTEST_TRANSACTION_COST_BPS=10
BACKTEST_MIN_TRADES=30
BACKTEST_THRESHOLD_MIN=0.55
BACKTEST_THRESHOLD_MAX=0.85
BACKTEST_THRESHOLD_STEP=0.02
CALIBRATION_TRAIN_DAYS=120
CALIBRATION_VAL_DAYS=30
